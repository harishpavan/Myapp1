<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbspUser</th>
      <th>&nbspName</th>
      <th>&nbspNo of articles</th>
      <th>&nbspEmail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody align="center">
    <%= will_paginate %>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to gravatar_for(user), user_path(user) %></td> 
        <td><%= link_to user.username, user_path(user) %></td>
        <td><small><%= pluralize(user.articles.count, "article") if user.articles %></small>
        <td><%= user.string %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-xs btn-success" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-xs btn-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
    <%= will_paginate %>

  </tbody>
</table>

<br>

