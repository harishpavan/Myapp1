<p id="notice"><%= notice %></p>

  <h2 align="center"><strong>Title:</strong>
  <%= @article.title %></h2>

<div class="well cols-sm-10 cols-sm-offset-4"
  <h2 align="center"><strong>Description:</strong></h2>
  <hr>
  <h4><%= simple_format(@article.description) %></h4>
  <hr>

  <div class="article-actions">
	<%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
	<%= link_to 'delete this article', article_path(@article), method: :delete, 
	data: {confirm: "are u sure u want to dekete the article?"}, 
	class: "btn btn-xs btn-danger" %>
	<%= link_to 'view all articles', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
