<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-xs-12'>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :title, id: :article_title, class:"form-control", placeholder: "Title of the article", autofocus: true %>
        </div>
      </div>
      <br>
      </br>
      <div class="form-group">
          <div class="control-label col-sm-2">
          <%= form.label :description %>
          </div>
          <div class="col-sm-10">
          <%= form.text_area :description, rows: 10, id: :article_description, class:"form-control", placeholder: "body of the article", autofocus: true %>
          </div>
      </div>
      <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">

              <%= form.submit class: 'btn btn-primary btl-lg'%>
            </div>  
      </div>
    </div>
  </div>

<% end %>
